        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class="row">
        <div class="col col-lg-8">
            <h3>Project Info</h3>
            <span><i id="edit-project" class="fa fa-edit icon-clickable" style="float:right; font-size: 1.25em; padding-bottom: 10px;"></i></span>
            <table class="table table-striped rounded">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{info.id}}</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>{{info.first_name}} {{info.last_name}}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{info.phone}}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{info.city}}, {{info.address}}</td>
                    </tr>
                    <tr>
                        <th>Start Date</th>
                        <td>{{info.start_date}}</td>
                    </tr>
                    <tr>
                        <th>Total Payed</th>
                        <td>{{info.payment.payed}}</td>
                    </tr>
                    <tr>
                        <th>Total Amount</th>
                        <td>{{info.payment.total}}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{info.company}}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{info.status}}</td>
                    </tr>
                    <tr>
                        <th>Created Date</th>
                        <td>{{info.adate}}</td>
                    </tr>
                    <tr>
                        <th>Payment Progress</th>
                        <td>
                            <div class="progress">
                                <div class="progress-bar" style="width:{{info.payment.process_percentage}}%" role="progressbar" aria-valuenow="{{info.payment.payed}}" aria-valuemin="0" aria-valuemax="{{info.payment.total}}">{{info.payment.process_percentage}}%</div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col col-lg-4">
            <span><span class="sub-title">Payments</span><span><i id="add-payment" class="fa fa-plus-circle icon-clickable" style="float:right; font-size: 1.25em;"></i></span></span>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Created</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {{#each payments}}
                    <tr class="project-row">
                        <th id="id" scope="row">{{id}}</th>
                        <td id="amount">{{amount}}</td>
                        <td>{{adate}}</td>
                        <td><i class="fa fa-edit icon-clickable edit-payment" style="float:right"></i></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>

            <span><span class="sub-title">Commissions</span><span><i id="add-commission" class="fa fa-plus-circle icon-clickable" style="float:right; font-size: 1.25em;"></i></span></span>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Supplier</th>
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Bought Date</th>
                    <th scope="col">Payed?</th>
                    <th scope="col">Payed Date</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {{#each commissions}}
                    <tr class="commission-row">
                        <th id="id" scope="row">{{id}}</th>
                        <td>{{supplier_title}}</td>
                        <td>{{item_description}}</td>
                        <td>{{amount}}</td>
                        <td>{{bought_date}}</td>
                        <td>{{is_payed}}</td>
                        <td>{{payed_date}}</td>
                        <td><i class="fa fa-money-bill icon-clickable commission-payed"></i></td>
                        <td><i class="fa fa-edit icon-clickable edit-commission" style="float:right"></i></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>

            <span><span class="sub-title">Colors</span><span><i id="add-color" class="fa fa-plus-circle icon-clickable" style="float:right; font-size: 1.25em;"></i></span></span>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Manufacturer</th>
                    <th scope="col">Code</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {{#each colors}}
                    <tr class="color-row">
                        <th id="id" scope="row">{{id}}</th>
                        <td>{{manufacturer}}</td>
                        <td>{{code}}</td>
                        <td>{{description}}</td>
                        <td>{{adate}}</td>
                        <td><i class="fa fa-edit icon-clickable edit-color" style="float:right"></i></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>

            <h2>Notes</h2>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Note</th>
                    <th scope="col">Created</th>
                    <th scope="col">Edited</th>
                </tr>
                </thead>
                <tbody>
                {{#each notes}}
                    <tr class="project-row">
                        <th scope="row">{{id}}</th>
                        <td>{{note}}</td>
                        <td>{{adate}}</td>
                        <td>{{edate}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <span>
        Images
        <i id="show-all-images" class="fa fa-images icon-clickable" style="float:right; font-size: 2.25em; margin-left: 20px;"></i>
        <i id="add-image" class="fa fa-plus-circle icon-clickable" style="float:right; font-size: 2.25em;"></i>
    </span>

    <div class="container"  style="margin-top: 20px;">
        <div class="row blog">
            <div class="col-md-12">
                <div id="blogCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {{#each images.groups}}
                        <li data-target="#blogCarousel" data-slide-to="{{@index}}"></li>
                        {{/each}}
                    </ol>
                    <!-- Carousel items -->
                    <div class="carousel-inner">
                        {{#each images.groups}}
                        <div class="carousel-item active">
                            <div class="row">
                                {{#each images}}
                                <div class="col-md-{{../../images.width}}">
                                    <a href="#">
                                        <img src="/images/{{filename}}" alt="{{description}}" class="image_size">
                                    </a>
                                    {{description}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>


</body>
</html>